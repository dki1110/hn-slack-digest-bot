# ===== HN Digest Bot settings =====

# Prompt language switch (ja|en)
PROMPT_LANG=en

# How many front-page items to fetch from HN
HN_TOP_N=20

# Fetch and summarize linked article body (true/false)
FETCH_ARTICLE_BODY=false

# Maximum number of linked articles to fetch per run (limits load/risk)
BODY_FETCH_MAX=5

# Body extraction mode:
#   ogp_only      -> only use meta description / og:title / og:description (safer)
#   readability   -> download HTML and extract readable text (more aggressive)
BODY_MODE=ogp_only

# Max characters of extracted article text to pass to the summarizer
# (Prevents overly-long inputs from diluting summaries)
MAX_SOURCE_CHARS=12000

# Fetch HN comments for each story via Algolia API (0 disables)
HN_COMMENTS_MAX=15

# Network / politeness
REQUEST_TIMEOUT_SEC=15
USER_AGENT="hn-digest-bot/1.0 (contact: you@example.com)"

# Domain allow/deny lists (comma-separated).
# If ALLOW_DOMAINS is set (non-empty), only those domains will be fetched for body text.
# DENY_DOMAINS always blocks.
ALLOW_DOMAINS=
DENY_DOMAINS=medium.com

# Slack Incoming Webhook URL (keep secret; do NOT commit)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ

# Optional: Slack channel mention prefix (e.g. <!channel> )
SLACK_PREFIX=

# Post each item to Slack immediately after summarizing (true/false)
POST_EACH=false
